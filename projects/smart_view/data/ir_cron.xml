<odoo>
    <record id="demo_scheduler_action_python" model="ir.cron">
        <field name="name">scheduler action</field>
        <field name="interval_number">1</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">-1</field>
        <field name="model_id" ref="model_sale_order"/>
        <field name="state">code</field>
        <field name="code">model.change_state()</field>
        <field name="active" eval="True" />
        <field name="doall" eval="False"/>
        <field name="nextcall" eval="(DateTime.now() + relativedelta(minutes=1)).strftime('%Y-%m-%d %H:%M:%S')"/>
    </record>
</odoo>