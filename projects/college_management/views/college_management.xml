    <!-- Top menu item -->

    <menuitem name="college management" id="college_management_menu_root" action="college_management_action_window"/>

    <!-- menu categories -->

    <menuitem name="Departments" id="college_management_menu_1" parent="college_management_menu_root"/>
    <menuitem name="Student" id="college_management_menu_2" parent="college_management_menu_root"/>

