<odoo>
    <data>
        <template id="smart_view_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <br/>
                            <br/>
                            <ul>
                                <li>Name : <span t-field="o.name"/></li>
                                <li>Customer : <span t-field="o.customer_id"/></li>
                                <li>Rental type : <span t-field="o.rental_type_id"/></li>
                                <li>Rental Product : <span t-field="o.rental_product_id"/></li>
                                <li>Start Date : <span t-field="o.startdate"/></li>
                                <li>End Date : <span t-field="o.enddate"/></li>
                                <li>Price : <span t-field="o.price"/></li>
                            </ul>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
    <report
        id="smart_report_id"
        model="rental.management"
        report_type="qweb-pdf"
        string="print invoice"
        name="rental_management.smart_view_template"
        file="rental_management.smart_view_template"/>

</odoo>