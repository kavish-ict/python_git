<odoo>

    <record model="ir.ui.view" id="batch_order_wizard_form">
        <field name="name">wizard</field>
        <field name="model">batch.order.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="batch_order_lines_ids">
                        <tree editable="bottom">
                            <field name="product_id"/>
                            <field name="description"/>
                            <field name="price"/>
                            <field name="quantity"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button type="object" name="submit_record" string="Submit" class="btn-info"/>
                    <button special="cancel" string="Cancel" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>
