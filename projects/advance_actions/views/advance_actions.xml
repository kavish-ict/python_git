<odoo>
    <!--  explicit list view definition  -->
    <record model="ir.ui.view" id="advance_tree">
        <field name="name">Advance Action</field>
        <field name="model">advance.actions</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>

            </tree>
        </field>
    </record>
    <!--  actions opening views on models  -->
    <record model="ir.actions.act_window" id="advance_action_window">
        <field name="name">advance actions</field>
        <field name="res_model">advance.actions</field>
        <field name="view_mode">tree,form</field>
    </record>


        <record id="action_server_python" model="ir.actions.server">
            <field name="name">demo server action</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="advance_actions.model_advance_actions" />
            <field name="binding_model_id" ref="advance_actions.model_advance_actions" />
            <field name="state">code</field>
            <field name="code">model.call_action()</field>
        </record>

