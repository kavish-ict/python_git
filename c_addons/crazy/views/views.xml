<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="crazy.list">
      <field name="name">crazy list</field>
      <field name="model">crazy.crazy</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="crazy.action_window">
      <field name="name">crazy window</field>
      <field name="res_model">crazy.crazy</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="crazy.action_server">
      <field name="name">crazy server</field>
      <field name="model_id" ref="model_crazy_crazy"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="crazy" id="crazy.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="crazy.menu_1" parent="crazy.menu_root"/>
    <menuitem name="Menu 2" id="crazy.menu_2" parent="crazy.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="crazy.menu_1_list" parent="crazy.menu_1"
              action="crazy.action_window"/>
    <menuitem name="Server to list" id="crazy" parent="crazy.menu_2"
              action="crazy.action_server"/>

  </data>
</odoo>