<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="database.list">
      <field name="name">database list</field>
      <field name="model">database.database</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
          <field name="dob"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="database.action_window">
      <field name="name">database window</field>
      <field name="res_model">database.database</field>
      <field name="view_mode">tree,form</field>
    </record>


    <record model="ir.actions.act_window" id="database.action_window_id">
      <field name="name">languages</field>
      <field name="res_model">database.database</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="database.action_window_id1">
      <field name="name">group</field>
      <field name="res_model">database.database</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="database.action_server">
      <field name="name">database server</field>
      <field name="model_id" ref="model_database_database"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="database" id="database.menu_root"/>

    <!-- menu categories -->
<!--view-1-->
    <menuitem name="Menu 1" id="database.menu_1" parent="database.menu_root"/>
    <menuitem name="Menu 2" id="database.menu_2" parent="database.menu_root"/>
    <menuitem name="Menu 3" id="database.menu_3" parent="database.menu_root"/>



    <!-- actions -->
<!--action-1-->
    <menuitem name="List" id="database.menu_1_list" parent="database.menu_1"
              action="database.action_window"/>

    <menuitem name="Server to list" id="database.menu_2_list" parent="database.menu_2"
              action="database.action_window_id"/>

    <menuitem name="list" id="database.menu_3_list" parent="database.menu_3"
              action="database.action_window_id1"/>
    <menuitem name="tuple" id="database.menu_3_list_1" parent="database.menu_3"
              action="database.action_window_id1"/>
    <menuitem name="dictionary" id="database.menu_3_list_2" parent="database.menu_3"
              action="database.action_window_id1"/>
    <menuitem name="string" id="database.menu_3_list_3" parent="database.menu_3"
              action="database.action_window_id1"/>

  </data>
</odoo>